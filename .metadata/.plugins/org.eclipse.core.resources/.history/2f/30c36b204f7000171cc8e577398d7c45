		boolean b;
		b = false ;
		System.out.println("b is " + b);
		b = true ;
		System.out.println("b is " + b);
		if(b) System.out.println("This is executed.");
		b = false;
		if(b) System.out.println("This is not executed.");
		// outcome of a relational operator is a boolean value
